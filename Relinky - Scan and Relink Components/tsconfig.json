{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@actions": ["src/actions"],
      "@actions/*": ["src/actions/*"],
      "@variableUnlinker": ["src/variable-unlinker"],
      "@variableUnlinker/*": ["src/variable-unlinker/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
